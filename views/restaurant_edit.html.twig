<html>
    <head>
        <title>Restaurants</title>
        <link rel="stylesheet"      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    </head>
    <body>
        <h1>Update the {{ restaurant.getPlaceName}} info. </h1>

        <form action="/restaurants/{{ restaurant.getId }}" method='post'>
            <input name='_method' type='hidden' value='patch'>

            <label for='place_name'>Rename your restaurant:</label>
            <input id='place_name' name='place_name' type='text'>
            <label for='address'>Change Address:</label>
            <input id='address' name='address' type='text'><label for='phone'>Change Phone Number:</label>
            <input id='phone' name='phone' type='text'>
            <button type='submit'>Update</button>
        </form>

        <form action="/restaurants/{{ restaurant.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">

            <button type="submit">Delete</button>
        </form>
        <a class= 'btn' href='/restaurant_edit' role='button'></a>

    </body>
</html>
